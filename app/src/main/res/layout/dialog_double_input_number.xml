<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/default_dialog_width"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ddin_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:padding="@dimen/small_spacing"
        android:text="Title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dialog_title_text_size" />

    <NumberPicker
        android:id="@+id/ddin_text_nb_picker1_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ddin_title_tv"
        app:layout_constraintWidth_percent="0.5" />

    <NumberPicker
        android:id="@+id/ddin_text_nb_picker2_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ddin_text_nb_picker1_et"
        app:layout_constraintTop_toBottomOf="@+id/ddin_title_tv"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/ddin_confirm_bt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@android:string/ok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ddin_text_nb_picker1_et"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/ddin_cancel_bt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@android:string/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ddin_confirm_bt"
        app:layout_constraintTop_toBottomOf="@+id/ddin_text_nb_picker1_et"
        app:layout_constraintWidth_percent="0.5" />


</android.support.constraint.ConstraintLayout>